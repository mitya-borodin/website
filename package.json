{
  "version": "1.0.0",
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build",
    "test": "web-test-runner \"src/**/*.test.ts\"",
    "lint": "eslint . --ext .ts --fix --no-error-on-unmatched-pattern",
    "fmt": "prettier --write **/*.{js,ts,svelte}"
  },
  "browserslist": ">0.75%, not ie 11, not UCAndroid >0, not OperaMini all",
  "dependencies": {
    "normalize.css": "^8.0.1",
    "svelte": "^3.24.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(ts|json|svelte)": [
      "npm run fmt",
      "git add"
    ],
    "*.ts": [
      "npm run lint",
      "git add"
    ]
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.0.5",
    "@snowpack/plugin-svelte": "^3.5.2",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@snowpack/plugin-webpack": "^3.0.0",
    "@snowpack/web-test-runner-plugin": "^0.2.1",
    "@testing-library/svelte": "^3.0.3",
    "@types/chai": "^4.2.14",
    "@types/node": "^14.14.22",
    "@types/snowpack-env": "^2.3.3",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "@web/test-runner": "^0.12.7",
    "chai": "^4.2.0",
    "eslint": "^7.18.0",
    "eslint-plugin-svelte3": "^3.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "postcss": "^8.2.4",
    "postcss-css-variables": "^0.17.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^14.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.1.1",
    "snowpack": "^3.0.11",
    "stylelint": "^13.9.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "svelte-preprocess": "^4.6.5",
    "typescript": "^4.1.3",
    "webpack-bundle-analyzer": "^4.4.0"
  }
}
